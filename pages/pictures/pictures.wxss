page {
  background: #eee;
}

.gride {
  display: flex;
  justify-content: space-around;
}

.gride .item {
  width: 45%;
}

.gride .item view {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  text-align: center;
  border-radius: 4rpx;
  box-shadow: 1px 1px 1px #999;
  background: #fff;
}

.gride .item view image {
  display: block;
  width: 100%;
  border-radius: 4rpx;
}

.gride .item view text {
  width: 100%;
  font-size: 26rpx;
}
